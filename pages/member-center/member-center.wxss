/* 个人中心 样式 */
page{
  background:#F0EFF4;
}
.user_head{
  height:133px;
  color:#fff;
  font-size:12px;
  position: relative;
}
.user_head-bg{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
}
.userInfo{
  padding:15px;
  position: relative;
}
.userInfo .user_logo{
  float:left;
  width:50px;
  height:50px;
  border-radius:50%;
  border:2px solid rgba(255,255,255,0.6);
  background:rgba(255,255,255,0.8);
}
.userInfo .user_msg{
  float:left;
  margin-left:10px;
  padding:6px 0;
}
.userInfo .user_level{
  background:rgba(0,0,0,0.6);
  border-radius:10px;
  padding:2px 10px;
  margin-left:10px;
  font-size:12px;
}
.userInfo .is_ws{
  margin-top:5px;
  position:relative;
}
.userInfo .is_ws::after{
  content:'';
  width:6px;
  height:6px;
  border:2px solid #fff;
  border-left-color:transparent;
  border-bottom-color:transparent;
  display:block;
  position:absolute;
  top:50%;
  left:85px;
  transform: rotate(45deg) translateY(-3px);
}
.user_referee{
  float:right;
  width:40px;
  font-size:12px;
  text-align: center;
}
.integralInfo{
   width:100%;
   position: absolute;
   bottom:0;
}
.integralInfo>navigator{
  background:rgba(0,0,0,0.2);
  width:50%;
  float:left;
  text-align: center;
  display:block;
  padding:2px 0;
  box-sizing: border-box;
}
.integralInfo>navigator:first-child{
  border-right:2px solid #d6bc96;
}
.integralInfo>navigator view{
  font-size:16px;
}
.integralInfo>navigator text{
  font-size:12px;
}
.order_box{
  background:#fff;
}
.order_top-main{
  margin-left:5vw;
  border-bottom:1px solid #ebebeb;
  line-height:8vh;
  height:8vh;
}
.order_list{
  overflow: hidden;
  
}
.order_list navigator{
  float:left;
  width:20%;
  text-align: center;
  position: relative;
  padding:2vw 0;
}
.list_block .order_top-main:last-child{
  border-bottom:none;
}
.order_list image{
  width:5vw;
  display:block;
  margin:0 auto;
}
.order_list text{
  font-size:3vw;
}
.order_list .badge{
  position: absolute;
  left:50%;
  top:2px;
  margin-left:2vw;
  border:1px solid #ff5252;
  border-radius: 50%;
  padding:2px ;
  font-size:3vw;
  line-height:2vw;
  width:2vw;
  height:2vw;
  color:#ff5252;
}
.list_block{
  margin-top:2vw;
  background:#fff;
}