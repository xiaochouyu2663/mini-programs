/* 购物车 */
.shopcar-header{
  line-height:10.185vw;
  background:#ffffff;
  padding:0 3.7vw;
  overflow: hidden;
  border-bottom: 1px solid #e7e5ea;
}
.shopcar-header .title{
  float: left;
  color: #656565;
  font-size:3.7vw; 
}
.shopcar-header .opt{
  float: right;
  color: #585858;
}
.shopcar-body{
  background: #ffffff;
}
.shopcar-body .goods-item{
  position: relative;
  padding:3.7vw 3.7vw 3.7vw 12vw;
  border-bottom:1px solid #e7e5ea;
  height: 20vw;
}
.goods-item .pull-left{
  position: absolute;
  top: 50%;
  left: 3vw;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);
}
.item-info{
  position: relative;
  width:100%;
  height: 20vw;
}
.goods-thumb{
  width:18vw;
  height: 19vw;
  
}
.goods-thumb image{
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.goods-name{
  position: absolute;
  top:0;
  left:20vw;
}
.goods-price{
  position: absolute;
  top:10vw;
  left:20vw;
  color: #bdd90a;
}
.goods-integral{
  position: absolute;
  top:15vw;
  left:20vw;
  color: #bdd90a;
  font-size: 3.4vw;
}
.goods-quie{
  position: absolute;
  right: 0;
  bottom: 0;
}
.good-name .goods-num{
  margin:2vw 0 2vw;
  overflow: hidden;
  border:1px solid red;
}
.goods-num view{
  float:left;
}
.goods-num view.add,.goods-num view.minus{
  border:1px solid #d7d7d7;
  font-size:5.6vw;
  width:8vw;
  height:8vw;
  line-height: 8vw;
  text-align: center;
}
.goods-num view.add{
  border-radius: 0 2px 2px 0;
}
.goods-num view.minus{
  border-radius: 2px 0  0 2px;
}
.goods-num .buy-num{
  width:7vw;
  border:1px solid  #d7d7d7;
  border-width:1px 0 1px 0;
  line-height:8vw;
  height:8vw;
  color:#ff5722;
  text-align: center; 
}
.shopcar-footer{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 14vw;
    padding: 0 20vw;
    background: rgba(255,255,255,.9);
    color: #333;
    border-top: 1px solid #ebebeb;
    box-sizing: border-box;
}
.shopcar-footer .pull-left{
  position: absolute;
  top: 50%;
  left: 3vw;
  transform: translateY(-50%);
}
.shopcar-footer button{
  position: absolute;
  top: 50%;
  right: 3vw;
  transform: translateY(-50%);
  background: #bdd90a;
  color: #fff;
}
.shopcar-footer .good-amount {
  text-align: right;
  padding:2vw 0;
  line-height:5vw;
}
.good-amount .amout-price{
  color: #bdd90a;
}